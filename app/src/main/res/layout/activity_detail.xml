<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        android:id="@+id/FrameLayout">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/FrameLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_also_known_as_label"
                android:paddingTop="10dp"

                android:id="@+id/also_known_tvd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/also_known_tv"
                android:layout_toRightOf="@+id/also_known_tvd"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/also_known_tvd"
                android:id="@+id/ingredients_tvd"
                android:paddingTop="20dp"
                android:text="@string/detail_ingredients_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingredients_tv"
                android:layout_below="@+id/also_known_tvd"
                android:layout_toRightOf="@+id/ingredients_tvd"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_place_of_origin_label"
                android:id="@+id/orgin"
                android:paddingTop="45dp"
                android:layout_below="@+id/ingredients_tvd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/origin_tv"
                android:layout_below="@+id/ingredients_tvd"
                android:paddingTop="45dp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/orgin"
                android:layout_width="wrap_content"
                android:text=" - "
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_description_label"
                android:id="@+id/description_tvd"
                android:layout_below="@+id/orgin"
                android:paddingTop="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_below="@+id/orgin"
                android:layout_toRightOf="@+id/description_tvd"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>


